section.featured
  .wrapper
    h3.section-title Избранные проекты
    .project-cards

      .card
        .card__img-container
          img.card__img-top(src="./img/lawOffice-thumb.jpg" alt="project thumb")
          .card__img-overlay
            .card__logo
              img(src="./img/svg/lawOffice-logo.svg", alt="project logo")
          a.card__img-overlay.overlay-content(href="./lawOffice/")
            h5.card__title «Ветров и партнёры»
            p.card__text Сайт адвокатского бюро
        .card__body
          h4.card__title 
            a.title-link(href="./lawOffice/") «Ветров и партнёры»
        .card__footer
          ul.tech
            li.tech__item 
              span.badge Node.js
            li.tech__item 
              span.badge Gulp
            li.tech__item 
              span.badge Jquery
            li.tech__item 
              span.badge HTML/CSS

